{
  "name": "veasin/nx-project",
  "description": "NX Project Template",
  "keywords": ["nx", "framework", "project template"],
  "type": "project",
  "homepage": "https://github.com/veasin/nx",
  "authors": [
    {
      "name": "Vea",
      "homepage": "https://github.com/veasin",
      "email": "vea@live.cn"
    }
  ],
  "require":{
    "veasin/nx":"^1.3.1",
    "veasin/nx-controller-model":"^0.0.5",
    "veasin/nx-router-annotation": "^0.0.4"
  },
  "autoload":{
    "psr-4":{
      "your_project\\":"src/"
    }
  },
  "scripts": {
    "dev": "@php -d max_execution_time=0 -S localhost:8080 web/index.php",
    "routeMake": "nx\\tools\\routeAnnotation::Make",
    "routeHttp": "nx\\tools\\routeHttp::Make",
    "route": "@routeMake --sort \\your_project\\controllers\\",
    "routeO": "@routeMake --sort \\your_project\\controllers\\ -o"
  }
}